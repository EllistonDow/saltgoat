# Magento API secrets example (copy to salt/pillar/secret/magento_api.sls)

secrets:
  magento_api:
    example-site:
      base_url: "https://example.com"
      token: "<integration_token>"
      auth_mode: bearer
      # 可选 OAuth1 示例：
      # auth_mode: oauth1
      # consumer_key: "..."
      # consumer_secret: "..."
      # access_token: "..."
      # access_token_secret: "..."
