mattermost:
  enabled: true
  domain: "chat.example.com"
  site_url: "https://chat.example.com"
  base_dir: "/opt/saltgoat/docker/mattermost"
  http_port: 8065
  image: "mattermost/mattermost-team-edition:latest"
  system_user: "mattermost"
  system_group: "mattermost"
  uid: 2000
  gid: 2000
  db:
    image: "postgres:15"
    user: "mattermost"
    password: "MattermostDBPass!"
    name: "mattermost"
  admin:
    username: "sysadmin"
    password: "ChangeMe_Admin!"
    email: "mattermost@example.com"
  smtp:
    host: ""
    port: 587
    username: ""
    password: ""
    from_email: "mattermost@example.com"
    enable_tls: true
  file_store:
    type: "local"            # local 或 s3（使用 minio/对象存储时填 s3 并在 env 中配置）
  extra_env: {}              # 任何其他 MM_* 环境变量，可按 key: value 追加
  traefik:
    router: "mattermost"
    entrypoints:
      - "web"
      - "websecure"
    tls:
      enabled: true
      resolver: "saltgoat"
    extra_labels: []         # 可追加额外的 Traefik label（字符串）
