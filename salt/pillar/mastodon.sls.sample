mastodon:
  instances:
    example:
      domain: "social.example.com"
      base_dir: "/opt/saltgoat/docker/mastodon-example"
      image: "ghcr.io/mastodon/mastodon:v4.3.0"
      streaming_image: "ghcr.io/mastodon/mastodon-streaming:v4.3.0"
      admin:
        email: "admin@example.com"
      postgres:
        image: "postgres:15"
        db: "mastodon_example"
        user: "mastodon"
        password: "ChangeMePostgres"
      redis:
        image: "redis:7"
      smtp:
        host: "smtp.office365.com"
        port: 587
        username: "smtp-user@example.com"
        password: "ChangeMeSMTP"
        from_email: "no-reply@social.example.com"
        tls: true
      storage:
        uploads_dir: "/srv/mastodon/example/uploads"
        assets_dir: "/srv/mastodon/example/public-assets"
        packs_dir: "/srv/mastodon/example/public-packs"
        backups_dir: "/srv/mastodon/example/backups"
      traefik:
        router: "mastodon-example"
        tls:
          enabled: false
          resolver: "saltgoat"
        extra_labels: []
      threads:
        telegram_general: null
      sidekiq_queues:
        - default
        - push
        - ingress
        - mailers
      extra_env: {}
