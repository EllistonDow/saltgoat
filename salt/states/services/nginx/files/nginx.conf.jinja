{% set cfg = settings %}
user {{ cfg.user }} {{ cfg.group }};
worker_processes {{ cfg.worker_processes }};
pid {{ cfg.pid_file }};

error_log {{ cfg.log_dir }}/error.log;

events {
  worker_connections {{ cfg.worker_connections }};
}

http {
  include       {{ cfg.config_dir }}/mime.types;
  default_type  application/octet-stream;

  log_format main '$remote_addr - $remote_user [$time_local] "$request" '
                  '$status $body_bytes_sent "$http_referer" '
                  '"$http_user_agent" "$http_x_forwarded_for"';

  access_log {{ cfg.log_dir }}/access.log main;

  sendfile        on;
  tcp_nopush      on;
  tcp_nodelay     on;
  keepalive_timeout {{ cfg.keepalive_timeout }};
  types_hash_max_size 2048;
  server_tokens off;
  client_max_body_size {{ cfg.client_max_body_size }};

{% if cfg.gzip %}
  gzip on;
  gzip_disable "msie6";
  gzip_proxied any;
  gzip_comp_level 6;
  gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;
{% else %}
  gzip off;
{% endif %}

  include {{ cfg.conf_d_dir }}/*.conf;
  include {{ cfg.sites_enabled_dir }}/*;
}
